<a href="{% if location.isDraft %}#{% else %}{{ path(location) }}{% endif %}">
    {{ ez_render_field(content, 'image', {
        parameters: {
            alias: 'blog_post_line',
            class: 'img-responsive img-rounded'
        }
    }) }}
