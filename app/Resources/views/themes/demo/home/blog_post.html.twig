<div class="row space-bottom-less">
    <div class="col-md-4 center-block">
        {{ ez_render_field(content, 'image', {
            parameters: {
                alias: 'blog_post_line_home',
                class: 'img-responsive img-rounded'
            }
        }) }}
    </div>
    <div class="col-md-8">
        <h3 class="header-text-one"><a href="{% if location.isDraft %}#{% else %}{{ path(location) }}{% endif %}">{{ ez_content_name(content) }}</a></h3>
        <div class="small">{{ ez_render_field(content, 'intro') }}</div>
    </div>
</div>
