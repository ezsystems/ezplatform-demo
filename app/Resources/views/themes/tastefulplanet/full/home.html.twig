{% extends "@ezdesign/pagelayout.html.twig" %}

{% block page_head %}
    {% set title = ez_content_name(content) ~ " - " ~ content.contentInfo.publishedDate|localizeddate('short', 'short', app.request.locale) %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="content-type-folder home full-view">
        <div class="banner-image">
            <div class="thumbnail text-center">
                {{ ez_render_field(content, 'image', {
                    'parameters': {'alias': 'original', 'class': 'img-fluid w-100'}
                }) }}
                <div class="container title">
                    <h1 class="field-title">{{ ez_render_field(content, 'name') }}</h1>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="field-description text-center">
                        {{ ez_render_field(content, 'short_description') }}
                    </div>

                    <div class="field-description">
                        {{ ez_render_field(content, 'description') }}
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid places">
            <section class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-center">{{ 'Find Out Most'|trans }}</p>
                        <h1 class="text-center home-section">{{ 'Beautiful Destinations'|trans }}</h1>
                    </div>
                </div>
                {{ render_esi(controller('ez_content:viewAction', {
                    locationId: place_list_location_id,
                    viewType: 'home'
                })) }}
                <div class="row">
                    <div class="col-md-12 link text-center">
                        <a href="{{ path('ez_urlalias', {locationId: place_list_location_id}) }}" class="btn btn-primary btn-lg">{{ 'View all destinations'|trans }}</a>
                    </div>
                </div>
            </section>
        </div>
        <section class="container tastes">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center">{{ 'Find Out Most'|trans }}</p>
                    <h1 class="text-center home-section">{{ 'Delicious Cuisines'|trans }}</h1>
                </div>
                {{ render_esi(controller('ez_content:viewAction', {
                    locationId: tastes_location_id,
                    viewType: 'home'
                })) }}
                <div class="col-md-12 link text-center">
                    <a href="{{ path('ez_urlalias', {locationId: tastes_location_id}) }}" class="btn btn-primary btn-lg">{{ 'View all cuisines'|trans }}</a>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
