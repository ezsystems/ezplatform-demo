<!DOCTYPE html>
<html class="no-js" lang="{{ app.request.locale }}">
    <head>
        {% block seo_metas %}
            {% if location is defined and not location.isDraft %}
{#                {% include "NovaeZSEOBundle::seometas_head.html.twig" %}#}
            {% endif %}
        {% endblock %}
        
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,500,600,700&display=swap&subset=latin-ext" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
        <link href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" rel="stylesheet"
              integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
              crossorigin="" />

        {% block page_head %}
            <title>{{ title|default('Home') }}</title>
        {% endblock %}

        {% block head_styles %}
            {{ encore_entry_link_tags('maison') }}
            {{ app_render_css(ezplatform.rootLocation.content.id)|raw }}
        {% endblock %}

    </head>
    <body>
        {% block header %}
            {{ render_esi(controller('App\\Controller\\MenuController::getChildNodesAction', {
                template: '@ezdesign/layout/header.html.twig',
                pathString: location is defined ? location.pathString
            })) }}
        {% endblock %}

        <main>
            {% block content %}
            {% endblock %}
        </main>

        {% block footer %}
            {{ render_esi(controller('App\\Controller\\MenuController::getChildNodesAction', {
                template: '@ezdesign/layout/footer.html.twig',
                pathString: location is defined ? location.pathString
            })) }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/popper.js/dist/umd/popper.min.js') }}"></script>
            <script src="{{ asset('bundles/ezplatformadminuiassets/vendors/bootstrap/dist/js/bootstrap.min.js') }}"></script>

            <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
                    integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
                    crossorigin=""></script>

            {{ encore_entry_script_tags('maison') }}
            {{ app_render_js(ezplatform.rootLocation.content.id)|raw }}
        {% endblock %}
    </body>
</html>
